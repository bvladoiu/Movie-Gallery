<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaha.challenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VahaChallenge">

        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".ui.moviedetail.MovieDetail"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".ui.movielist.MainActivity"/>
        <activity
            android:name=".ui.movielist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.VahaChallenge.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".network.SyncService"
            android:enabled="true"
            android:icon="@drawable/ic_launcher_foreground"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>